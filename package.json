{
  "name": "nodejs-api-template",
  "version": "1.0.0",
  "description": "nodejs api template",
  "main": "index.js",
  "author": "Rafael Trestini",
  "license": "MIT",
  "engines": {
    "node": "16"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-bodyparser": "^4.3.0",
    "koa-favicon": "^2.1.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.14.14",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "serve": "concurrently \"tsc -w --preserveWatchOutput\" \"nodemon --ignore config/config.json dist/index.js\"",
    "test": ""
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:trestini/nodejs-api-template.git"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage/",
      "/config/",
      "/migrations/"
    ]
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.{ts,js}",
    "!**/node_modules/**",
    "!**/dist/**",
    "!**/coverage/**"
  ]
}
